            <div class="main">
                <div class="left">
                    <form action="/submit" method="post">
                        <div class="input-group">
                            <label class="title_fonts" for="task-name">Enter your task name</label>
                            <input class="task_place_holder" type="text" name="task-name" id="task-name" required>
                        </div>
                        <div class="input-group">
                            <label class="title_fonts" for="task-description">Describe what you're going to do today</label>
                            <textarea class="task_place_holder text-place" name="task-description" id="task-description" placeholder="example your daily routine, meeting, shopping etc ..." required></textarea>
                        </div>
                        <div class="btn-list-style btn-add">
                            <button id="btn-add" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" style="fill: rgba(167, 139, 250, 1);"><path d="M16 2H8C4.691 2 2 4.691 2 8v13a1 1 0 0 0 1 1h13c3.309 0 6-2.691 6-6V8c0-3.309-2.691-6-6-6zm4 14c0 2.206-1.794 4-4 4H4V8c0-2.206 1.794-4 4-4h8c2.206 0 4 1.794 4 4v8z"></path><path d="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4z"></path></svg>
                                <span class="btn-text">Add Task</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="virtical-line"></div>
                <div class="right">
                    <% if (!hastask) { %>
                            <div class="no-tasks-message">
                                <p>No tasks added yet! Start by creating a new task ğŸ˜.</p>
                            </div>
                    <% } else { %>
                        <% tasks.forEach(task => { %>
                            <div class="tasks">
                                <div class="tasks-cards" id="<%= task.id %>">
                                    <h3 class="title_fonts"><%= task.name %></h3>
                                    <p><%= task.description %></p>
                                </div>
                                <%- include('partials/btn-list.ejs') %>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
                
            </div>
